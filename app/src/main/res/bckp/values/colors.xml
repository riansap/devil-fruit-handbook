<?xml version="1.0" encoding="utf-8"?>
<resources>
        <!--
            Primary Colors
            Warna utama aplikasi digunakan untuk elemen-elemen penting seperti tombol, toolbar, dan latar utama aplikasi.
        -->
        <color name="colorPrimary">#E53935</color> <!-- Merah Cerah - Warna utama untuk elemen interaktif utama -->
        <color name="colorPrimaryVariant">#B71C1C</color> <!-- Merah Lebih Gelap - Variasi warna merah untuk elemen dengan tingkat kedalaman yang lebih tinggi -->
        <color name="colorOnPrimary">#FFFFFF</color> <!-- Putih - Warna teks yang akan digunakan di atas warna utama agar kontras -->

        <!--
            Background Warna untuk Mode Terang dan Gelap
            Warna latar belakang untuk mendukung kedua mode terang dan gelap di antarmuka pengguna.
        -->
        <color name="colorBackgroundLight">#FFEBEE</color> <!-- Latar terang dengan nuansa merah muda lembut -->
        <color name="colorBackgroundDark">#8B0000</color> <!-- Latar gelap merah tua untuk mode gelap -->

        <!--
            Warna untuk Elemen Interaktif
            Warna aksen ini digunakan untuk tombol, ikon, atau elemen tambahan yang perlu menarik perhatian.
        -->
        <color name="colorAccent">#FFCDD2</color> <!-- Merah yang lembut untuk elemen aksen seperti tombol atau ikon tambahan -->

        <!--
            Warna Teks
            Warna teks digunakan untuk memastikan teks mudah dibaca oleh pengguna.
        -->
        <color name="colorTextPrimary">#212121</color> <!-- Warna teks utama yang digunakan di berbagai elemen teks utama -->
        <color name="colorTextSecondary">#757575</color> <!-- Warna teks sekunder untuk teks tambahan atau informasi kurang penting -->
</resources>
